    </bean>
    <bean id="person" class="dao.spring.day03zhuru.constructor.Person">
        <constructor-arg index="0" value="张三"></constructor-arg>
        <constructor-arg index="1" ref="car"></constructor-arg>
    </bean>-->

    <!--p命名空间注入-->
    <bean id="car3" class="dao.spring.day03zhuru.constructor.Car">
        <property name="brand" value="吉普"></property>
        <property name="no" value="京A0001"></property>
    </bean>
    <bean id="person3" class="dao.spring.day03zhuru.constructor.Person" p:name="王五" p:car-ref="car3"></bean>

    <!--自动注入-->
