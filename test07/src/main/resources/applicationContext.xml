<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">
    <!--IOC和DI(set方法注入)-->
    <bean id="helloSpring" class="dao.spring.day01.HelloSpring"></bean>
    <bean id="a4Paper" class="dao.spring.day01.A4Paper"></bean>
    <bean id="colorInk" class="dao.spring.day01.ColorInk"></bean>
    <bean id="printer" class="dao.spring.day01.Printer">
        <property name="ink" ref="colorInk"></property>
        <property name="paper" ref="a4Paper"></property>
    </bean>

    <!--构造注入-->
