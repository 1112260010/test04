<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <!--处理器映射器-->
    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="/hello">123</prop>
            </props>
        </property>
    </bean>
    <!--参数方法名称解析器-->
    <bean id="nameResolver" class="org.springframework.web.servlet.mvc.multiaction.ParameterMethodNameResolver">
        <!--当设置当前属性的时候，地址栏问号后边action就变成了actionName-->
        <property name="paramName" value="actionName"/>
    </bean>
    <!--注册处理器-->
    <bean id="123" class="cn.springmvc.day04view.controller.MyBeanNameViewResolver">
        <property name="methodNameResolver" ref="nameResolver"></property>
    </bean>

    <!--定义内部资源视图对象-->
    <bean id="inner" class="org.springframework.web.servlet.view.JstlView">
        <property name="url" value="/01.jsp"></property>
    </bean>
    <!--定义外部资源视图对象-->
    <bean id="outer" class="org.springframework.web.servlet.view.RedirectView">
        <property name="url" value="http://www.jd.com"></property>
    </bean>
    <!--视图解析器-->
    <bean class="org.springframework.web.servlet.view.BeanNameViewResolver"></bean>


    <!--方案二：使用mvc的default-servlet-handler-->
    <!--<mvc:default-servlet-handler/>-->

    <!--方案三：使用mvc的rescources -->
    <!--location:静态资源所在目录-->
    <!--mapping：对资源的请求-->
    <mvc:resources location="/image/" mapping="/image/**"/>
</beans>